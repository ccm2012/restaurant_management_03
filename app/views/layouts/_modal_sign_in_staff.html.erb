<div class="modal modal-item staff-sign-in">
  <div class="modal-content modal-lg customer-sign-in1">
    <div class="modal-header">
      <span class="close x-mark">&times;</span>
    </div>
    <div class="modal-body customer-sign-in2">
      <div class="row row-padding">
        <h1 class="stylish-heading h2style"><%= t "devise.sign_in2" %></h1>
        <div class="error-sign-in-staff"></div>
        <%= form_for :staff, url: login_path, authenticity_token: true,
          html: {id: "login-box"}, format: :json, remote: true do |f| %>
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control form-group",
            autofocus: true, placeholder: t("admin.email") %>
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control form-group",
            autocomplete: "off", placeholder: t("admin.pass") %>
          <%= f.submit t("devise.sign_in"), class: "log-btn3" %>
        <% end %>
        <br>
        <div class="line-separator"></div>
        <br>
        <div class="form-label open-sign-in-customer">
          <center><%= t "devise.sign_in_as_customer" %></center>
        </div>
      </div>
    </div>
    <div class="modal-footer">
    </div>
  </div>
</div>
