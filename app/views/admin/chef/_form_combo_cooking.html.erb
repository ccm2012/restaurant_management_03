<% cooking_combos.each do |combo| %>
  <tr>
    <td><%= combo.combo.name %></td>
    <td><%= combo.quantity %></td>
    <td><%= combo.combo.class%></td>
    <td>
      <%= form_for combo,
        url: admin_order_order_combo_path(combo.order_id, combo) do |f| %>
        <%= f.hidden_field :combo_id, value: combo.combo_id %>
        <%= f.hidden_field :status,
          value: :cooked,
          class: "btn btn-primary" %>
        <%= f.button t "staff_order.cooked" %>
      <% end %>
    </td>
  </tr>
<% end %>
