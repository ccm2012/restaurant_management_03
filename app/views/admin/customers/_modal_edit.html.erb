<div class="modal modal-item show-edit-customer">
  <div class="modal-content modal-lg">
    <div class="modal-header">
      <span class="close">&times;</span>
    </div>
    <div class="modal-body">
      <div class="row row-padding">
        <%= form_for [:admin, customer], remote: true do |f| %>
          <div class="col-sm-12">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name,
              class: "form-control form-group", required: true %>
          </div>
          <div class="col-sm-12">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email,
              class: "form-control form-group", required: true %>
          </div>
          <div class="col-sm-12">
            <%= f.label :phone_num, class: "form-label" %>
            <%= f.number_field :phone_num,
              class: "form-control form-group", required: true %>
          </div>
          <div class="col-sm-1 col-sm-offset-10 modal-edit-customer">
            <button class="btn btn-success btn-save-customer"
              data-id="<%= customer.id %>">
              <%= t "button.save" %>
            </button>
          </div>
        <% end %>
        <div class="col-sm-1 modal-edit-customer">
          <button class="btn btn-default btn-cancel-customer"
            data-id="<%= customer.id %>">
            <%= t "button.cancel" %>
          </button>
        </div>
      </div>
    </div>
    <div class="modal-footer">
    </div>
  </div>
</div>
