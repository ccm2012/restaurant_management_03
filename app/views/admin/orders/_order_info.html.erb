<h3 class="title"><%= t "staff_order.order_confirm" %></h3>
<table dir="ltr" class="default-dg-table">
  <tbody id="combo_dish">
  <tr class="dg_tr" id="di_row_0">
    <td class="default_dg_td dg-left dg-nowrap">
      <b><%= t "admin.orders.order.code" %></b>
    </td>
    <td class="default_dg_td dg-left order-id" data-order-id="<%= order.id %>"><%= order.code %></td>
    <div class="hidden order-id" data-order-id="<%= order.id %>"><%= order.id %></div>
  </tr>
  <tr class="dg_tr" id="di_row_0">
    <td class="default_dg_td dg-left dg-nowrap">
      <b><%= t "admin.orders.form.customer_name" %></b>
    </td>
    <td class="default_dg_td dg-left customer-id" data-customer-id="<%= order.customer.id %>">
      <%= order.customer.name %>
    </td>
  </tr>
  <tr class="dg_tr" id="di_row_0">
    <td class="default_dg_td dg-left dg-nowrap">
      <b><%= t "staff_order.phone_num" %></b>
    </td>
    <td class="default_dg_td dg-left"><%= order.customer.phone_num %></td>
  </tr>
  <tr class="dg_tr" id="di_row_0">
    <td class="default_dg_td dg-left dg-nowrap">
      <b><%= t "staff_order.email" %></b>
    </td>
    <td class="default_dg_td dg-left"><%= order.customer.email %></td>
  </tr>
  <tr class="dg_tr" id="di_row_0">
    <td class="default_dg_td dg-left dg-nowrap">
      <b><%= t "admin.orders.form.date" %></b>
    </td>
    <td class="default_dg_td dg-left">
      <%= order.day.in_time_zone(Settings.time_zone).strftime('%b %d %Y') %>
    </td>
  </tr>
  <tr class="dg_tr" id="di_row_0">
    <td class="default_dg_td dg-left dg-nowrap"><b>From</b></td>
    <td class="default_dg_td dg-left">
      <%= order.time_in %>
    </td>
  </tr>
  <tr class="dg_tr" id="di_row_0">
    <td class="default_dg_td dg-left dg-nowrap">
      <b><%= t "staff_order.table_id" %></b>
    </td>
    <td class="default_dg_td dg-left">
      <%= order.table_id %>
    </td>
  </tr>
  <tr class="dg_tr" id="di_row_0">
    <td class="default_dg_td dg-left dg-nowrap">
      <b><%= t "admin.orders.form.capacity" %></b>
    </td>
    <td class="default_dg_td dg-left">
      <%= order.capacity %>
    </td>
  </tr>
  <tr class="dg_tr" id="di_row_0">
    <td class="default_dg_td dg-left dg-nowrap">
      <b><%= t "admin.orders.order.discount" %></b>
    </td>
    <td class="default_dg_td dg-left dg-nowrap customer-discount" data-customer-discount="<%= order.discount %>">
      <%= order.discount %>%<br>
    </td>
  </tr>
  </tbody>
</table>
<br>
<div class="col-xs-12 text-center">
  <%= link_to t("admin.orders.edit.title"), edit_admin_order_path(order),
    class:"pj-button" %>
</div>
