<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <% if OmniAuth::Utils.camelize(provider) == "GoogleOauth2" %>
      <%= link_to t("devise.sign_in_with_gg"),
        omniauth_authorize_path(resource_name, provider),
        class: "login-btn login-btn--google white-text" %><br />
    <% else %>
      <%= link_to t("devise.sign_in_with", provider: OmniAuth::Utils.camelize(provider)),
        omniauth_authorize_path(resource_name, provider), class: "form-label" %><br />
    <% end %>
  <% end %>
<% end %>
